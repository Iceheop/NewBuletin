---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/container.astro';
import Banner from '../components/banner.astro';
import Header from '../components/header.astro';
import LatestNew from '../components/latestNew.astro';
import BannerPick from '../components/bannerPick.astro';
---

<Layout title="Noticias Villa Carmen.">
	<Container>
		<Banner />
		<Header />
		<div class="d-flex justify-content-between align-items-center my-3">
			<h2 class="fs-3">Latest News</h2>
			<a href="#" class="link-danger fw-medium text-decoration-none">
				See all
				<i class="bi bi-arrow-right ms-1"></i>
			</a>
		</div>
		<div class="row row-cols-md-2 row-cols-lg-3 g-3">
			<LatestNew img='https://images.justwatch.com/backdrop/304524015/s640/john-wick-4.%7Bformat%7D' alt='John Wick' time='4 min ago' title='Where To Watch "John Whick: Chapter 4' description='Lorem ipsum dolor sit amet consectetur adipisicing elit.' link="#" />

			<LatestNew img='https://noticia.do/wp-content/uploads/2017/03/duquesa-640x389.jpg' alt='duquesa' time='10 hours ago' title='se quemo duquesa (otra ve)' description='wao dio mio se quemo duquesa por la 5ta ve' link="#" />
			
			<LatestNew img='https://gadgets-reviews.com/images/wsscontent/articles/2020/06/Best_11_inch_laptop.jpg' alt='laptop' time='10 hours ago' title='tu laptop esta lenta?' description='Descubre como acelerar tu computadora con un simple click!' link="#" />
		</div>
		<BannerPick />
	</Container>
</Layout>