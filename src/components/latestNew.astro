---
interface Props {
    img: string;
    alt: string;
    time: string;
    title: string;
    description: string;
    link: string;
}
const { img, alt, time, title, description, link } = Astro.props;
---
<article>
    <div class="ratio ratio-1x1">
        <img src={img} alt={alt} class="img-fluid rounded-3 object-fit-cover">
    </div>
    <h2 class="fs-5 mb-2 mt-2">{title}</h2>
    <p class="mb-2">
    {description}
    </p>
    <div class="d-flex gap-2 aling-items-center">
        <a href={link} class="link-danger fw-medium text-decoration-none">Leer más</a>
        <span class="text-secondary">•</span>
        <span class="text-secondary">{time}</span>
    </div>
</article>